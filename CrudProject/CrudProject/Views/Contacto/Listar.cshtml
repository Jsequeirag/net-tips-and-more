@model List<ContactoModel>;
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Crear contacto
    </div>
    <div class="card-body">
        <a asp-action="Guardar" asp-asp-controller="Contacto" class="btn btn-success"><i class="bi bi-plus-circle"></i> Crear Nuevo</a>
        <hr />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Correo</th>
                    <th>Telefono</th>
                 
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Nombres</td>
                        <td>@item.Apellidos</td>
                        <td>@item.Telefono</td>
                        <td>@item.Correo</td>
                        <td>@item.IdContacto</td>
                        <td> <a asp-action="Editar" asp-controller="Contacto" class="btn btn-primary btn-sm" asp-route-IdContacto="@item.IdContacto"><i class="bi bi-pencil-fill"></i> Editar</a></td>
                        <td> <a asp-action="Eliminar" asp-controller="Contacto" class="btn btn-danger btn-sm" asp-route-IdContacto="@item.IdContacto"><i class="bi bi-trash"></i> Eliminar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
